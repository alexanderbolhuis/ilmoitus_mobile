<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeclareLineFragment" >

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            style="@style/Container"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/person_title"
                style="@style/ContainerItem"
                android:text="Regel Toevoegen"
                android:textColor="@color/ColorTitle"
                android:textSize="@dimen/TextSizeTitle" />

            <TextView
                style="@style/ContainerItemWithMarginTop"
                android:text="Datum:"
                android:textColor="@color/ColorMain"
                android:textSize="@dimen/TextSizeMain" />

            <LinearLayout style="@style/ContainerItem" >

                <EditText
                    android:id="@+id/editTextDate"
                    style="@style/ContainerItem"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:maxLines="1"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>

                <Button
                    style="@style/ContainerItem"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="showDatePickerDialog"
                    android:text="@string/pick_date" />
            </LinearLayout>

            <TextView
                style="@style/ContainerItemWithMarginTop"
                android:text="Declaratiesoort:"
                android:textColor="@color/ColorMain"
                android:textSize="@dimen/TextSizeMain" />

            <Spinner
                android:id="@+id/spinnerDeclarationType"
                style="@style/ContainerItem"
                android:prompt="@string/prompt_spinner" />

            <Spinner
                android:id="@+id/spinnerDeclarationSubType"
                style="@style/ContainerItem"
                android:prompt="@string/prompt_spinner" />

            <TextView
                style="@style/ContainerItemWithMarginTop"
                android:text="Bedrag:"
                android:textColor="@color/ColorMain"
                android:textSize="@dimen/TextSizeMain" />

            <EditText
                android:id="@+id/editCurrency"
                style="@style/ContainerItem"
                android:hint="Bedrag"
                android:inputType="numberDecimal" />

            <TextView
                style="@style/ContainerItemWithMarginTop"
                android:text="Bijlage:"
                android:textColor="@color/ColorMain"
                android:textSize="@dimen/TextSizeMain" />

            <Button
                android:id="@+id/buttonAddImage"
                style="@style/ContainerItem"
                android:onClick="onAddImageButtonClick"
                android:text="@string/addImage" />

            <TextView
                style="@style/ContainerItemWithMarginTop"
                android:text="Opmerkingen:"
                android:textColor="@color/ColorMain"
                android:textSize="@dimen/TextSizeMain" />

            <MultiAutoCompleteTextView
                android:id="@+id/Opmerkingen"
                style="@style/ContainerItem" />

            <LinearLayout style="@style/ContainerItemWithMarginTop" >

                <Button
                    android:id="@+id/buttonCancel"
                    style="@style/ContainerButtonCommit"
                    android:onClick="onCancelButtonClick"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/buttonAdd"
                    style="@style/ContainerButtonCommit"
                    android:text="@string/add" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>