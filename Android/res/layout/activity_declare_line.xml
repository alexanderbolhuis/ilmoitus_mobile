<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RelativeLayout" >

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            style="@style/Container"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/person_title"
                style="@style/TextViewTitle"
                android:text="Regel Toevoegen" />

            <TextView
                style="@style/TextViewSubTitle"
                android:text="Datum:" />

            <LinearLayout style="@style/ContainerItem" >

                <EditText
                    android:id="@+id/editTextDate"
                    style="@style/ContainerItem"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:maxLines="1"
                    android:onClick="showDatePickerDialog"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>

                <Button
                    style="@style/Button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="showDatePickerDialog"
                    android:text="@string/pick_date" />
            </LinearLayout>

            <TextView
                android:id="@+id/dateError"
                style="@style/TextViewError" />

            <TextView
                style="@style/TextViewSubTitle"
                android:text="Declaratiesoort:" />

            <Spinner
                android:id="@+id/spinnerDeclarationType"
                style="@style/Spinner"
                android:prompt="@string/prompt_spinner" />

            <Spinner
                android:id="@+id/spinnerDeclarationSubType"
                style="@style/Spinner"
                android:prompt="@string/prompt_spinner" />
            
            <TextView
                android:id="@+id/typeError"
                style="@style/TextViewError" />

            <TextView
                style="@style/TextViewSubTitle"
                android:text="Bedrag:" />

            <EditText
                android:id="@+id/editCurrency"
                style="@style/EditText"
                android:digits="0123456789,"
                android:hint="Bedrag"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/currencyError"
                style="@style/TextViewError" />

            <TextView
                style="@style/TextViewSubTitle"
                android:text="Bijlage:" />

            <Button
                android:id="@+id/buttonAddImage"
                style="@style/Button"
                android:onClick="onAddImageButtonClick"
                android:text="@string/addImage" />

            <ImageView
                android:id="@+id/mImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/TextViewSubTitle"
                android:text="Opmerkingen:" />

            <MultiAutoCompleteTextView
                android:id="@+id/Opmerkingen"
                style="@style/ContainerItem" />

            <LinearLayout style="@style/ContainerItemWithMarginTop" >

                <Button
                    android:id="@+id/buttonCancel"
                    style="@style/ContainerButtonCommit"
                    android:layout_marginRight="2dp"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/buttonAdd"
                    style="@style/ContainerButtonCommit"
                    android:layout_marginLeft="2dp"
                    android:text="@string/add" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>