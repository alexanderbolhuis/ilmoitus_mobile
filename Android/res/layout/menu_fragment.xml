<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" 
    android:background="#ecf0f1">

    <Button
        android:id="@+id/buttonOvervieuw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/icon_declaratie_overzicht"
        android:text="@string/overvieuw"
        android:textSize="12sp" 
        android:paddingTop="6dp"/>

    <Button
        android:id="@+id/buttonDeclare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/icon_declaratie_toevoegen"
        android:text="@string/declare"
        android:textSize="12sp" 
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/buttonOvervieuw"
        android:paddingTop="6dp"/>

    <Button
        android:id="@+id/buttonSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/icon_instellingen"
        android:text="@string/settings"
        android:textSize="12sp" 
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/buttonLogout"
        android:paddingTop="6dp"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/icon_uitloggen"
        android:text="@string/log_out"
        android:textSize="12sp" 
        android:layout_alignParentRight="true"
        android:paddingTop="6dp"/>

</RelativeLayout>
